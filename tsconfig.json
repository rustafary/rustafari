{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,           // Génère les fichiers .d.ts pour les types
    "outDir": "dist",              // Dossier de sortie pour les fichiers compilés
    "strict": true,
    "moduleResolution": "node"
  },
  "files": ["src/core/Web.d.ts","src/core/Web.ts","src/index.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",          // Exclut tous les fichiers se terminant par .test.ts
    "**/*.spec.ts"           // Exclut également les fichiers se terminant par .spec.ts si besoin
  ]
}
